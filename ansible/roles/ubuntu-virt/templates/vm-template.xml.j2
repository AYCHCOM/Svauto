<domain type='kvm'>
  <name>{{ vm.name }}</name>
  <description>{{ vm.description }}</description>
  <memory unit='KiB'>{{ vm.memory * 1024 }}</memory>
  <currentMemory unit='KiB'>{{ vm.memory * 1024 }}</currentMemory>

{% if openvswitch_mode == 'dpdk' %}
  <memoryBacking>
    <hugepages/>
  </memoryBacking>
  <numatune>
    <memory mode='strict' nodeset='0'/>
  </numatune>
{% endif %}

  <vcpu placement='static'>{{ vm.cpu }}</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>

{% if vm.firmware is defined %}
{% if vm.firmware == 'efi' %}
    <loader readonly='yes' type='pflash'>/usr/share/OVMF/OVMF_CODE.fd</loader>
    <nvram>/var/lib/libvirt/qemu/nvram/u1804-1_VARS.fd</nvram>
{% endif %}
{% endif %}

    <bootmenu enable='yes'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/>
  </features>
  <cpu mode='host-model' check='partial'>
    <model fallback='allow'/>

{% if openvswitch_mode == 'dpdk' %}
    <numa>
      <cell id='0' cpus='0-3' memory='{{ vm.memory * 1024 }}' unit='KiB' memAccess='shared'/>
    </numa>
{% endif %}

{% if openvswitch_mode == 'regular' %}
    <model fallback='allow'/>
{% endif %}

  </cpu>
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <devices>
    <emulator>/usr/bin/kvm-spice</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{ libvirt_pool_1 }}/{{ vm.name }}-disk0.qcow2'/>
      <target dev='sda' bus='scsi'/>
      <boot order='3'/>
      <address type='drive' controller='0' bus='0' target='0' unit='0'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <target dev='sdb' bus='scsi'/>
      <readonly/>
      <boot order='2'/>
      <address type='drive' controller='0' bus='0' target='0' unit='1'/>
    </disk>
    <controller type='usb' index='0' model='ich9-ehci1'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0a' function='0x7'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci1'>
      <master startport='0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0a' function='0x0' multifunction='on'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci2'>
      <master startport='2'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0a' function='0x1'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci3'>
      <master startport='4'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0a' function='0x2'/>
    </controller>
    <controller type='pci' index='0' model='pci-root'/>
    <controller type='scsi' index='0' model='virtio-scsi'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0b' function='0x0'/>
    </controller>
    <controller type='virtio-serial' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0c' function='0x0'/>
    </controller>

{% for interface in vm.devices.interfaces %}
     <interface type='bridge'>
      <source bridge='{{ interface.source.bridge }}'/>
       <model type='virtio'/>
{% if interface.boot is defined %}
{% if interface.boot.order is defined %}
       <boot order='{{ interface.boot.order }}'/>
{% endif %}
{% endif %}
       <address type='pci' domain='0x0000' bus='0x00' slot='{{ interface.address.slot }}' function='0x0'/>
     </interface>
{% endfor %}

{% if openvswitch_mode == 'regular' %}
    <interface type='bridge'>
      <source bridge='dummybr4'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
      <virtualport type='openvswitch'/>
    </interface>
    <interface type='bridge'>
      <source bridge='dummybr5'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
      <virtualport type='openvswitch'/>
    </interface>
{% endif %}

{% if openvswitch_mode == 'dpdk' %}
    <interface type='vhostuser'>
      <source type='unix' path='/var/run/openvswitch/vuosa-1-subscribers-1' mode='client'/>
      <model type='virtio'/>
{% if (enable_multiqueue == 'yes' and number_of_queues >= 1) %}
      <driver name='vhost' queues='{{ number_of_queues }}'/>
{% endif %}

      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
    </interface>
    <interface type='vhostuser'>
      <source type='unix' path='/var/run/openvswitch/vuosa-1-internet-1' mode='client'/>
      <model type='virtio'/>

{% if (enable_multiqueue == 'yes' and number_of_queues >= 1) %}
      <driver name='vhost' queues='{{ number_of_queues }}'/>
{% endif %}

      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </interface>
{% endif %}

    <serial type='pty'>
      <log file='/var/log/libvirt/qemu/{{ vm.name }}-serial0.log' append='off'/>
      <target type='isa-serial' port='0'>
        <model name='isa-serial'/>
      </target>
    </serial>
    <console type='pty'>
      <log file='/var/log/libvirt/qemu/{{ vm.name }}-serial0.log' append='off'/>
      <target type='serial' port='0'/>
    </console>
    <channel type='spicevmc'>
      <target type='virtio' name='com.redhat.spice.0'/>
      <address type='virtio-serial' controller='0' bus='0' port='1'/>
    </channel>
    <input type='tablet' bus='usb'>
      <address type='usb' bus='0' port='1'/>
    </input>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='spice' autoport='yes'>
      <listen type='address'/>
      <image compression='off'/>
    </graphics>
    <sound model='ich6'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x09' function='0x0'/>
    </sound>
    <video>
      <model type='virtio' heads='1' primary='yes'>
        <acceleration accel3d='no'/>
      </model>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <redirdev bus='usb' type='spicevmc'>
      <address type='usb' bus='0' port='2'/>
    </redirdev>
    <redirdev bus='usb' type='spicevmc'>
      <address type='usb' bus='0' port='3'/>
    </redirdev>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0d' function='0x0'/>
    </memballoon>
  </devices>
</domain>
