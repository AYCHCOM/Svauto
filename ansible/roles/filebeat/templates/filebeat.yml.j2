filebeat:
  inputs:
{% for input in inputs %}
    -
      paths:
{% for path in input.path %}
        - {{ path }}
{% endfor %}
      type: log
      enabled: {{ input.enabled }}
      scan_frequency: {{ input.scan_frequency }}
{% endfor %}

recursive_glob:
  enabled: True

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~

output:
  logstash:
    hosts: {{ logstash_hosts }}

logging:
  files:
    rotateeverybytes: 10485760 # = 10MB
